<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <!--STRIP LAYOUT-->
    <include name="View_504_Gallery">
        <include>ViewAnimation</include>
        <!--content detail-->
        <control type="group">
            <visible>Control.IsVisible(504)</visible>
            <!--flags-->
            <control type="label">
                <posx>398</posx>
                <posy>840</posy>
                <label>$INFO[ListItem.Label]</label>
                <width>1125</width>
                <font>font16_title_bold</font>
                <textcolor>white</textcolor>
            </control>
            <control type="label">
                <posx>398</posx>
                <posy>860</posy>
                <width>1125</width>
                <height>30</height>
                <align>left</align>
                <font>font13_title</font>
                <textcolor>white</textcolor>
                <label>$VAR[VideoSubLabelVar]</label>
                <visible>!Container.Content(artists) + !Container.Content(tvshows) + !Container.Content(movies)</visible>
            </control>
			
			<!-- Movies Info -->
			<control type="grouplist">
				<visible>Container.Content(movies)</visible>
				<orientation>horizontal</orientation>
				<posx>398</posx>
				<posy>860</posy>
				<width>1100</width>
				<height>30</height>
				<align>left</align>
				<aligny>center</aligny>
												
				<!-- Year -->
				<control type="label">
					<width min="20" max="366">auto</width>
					<height>30</height>
					<align>left</align>
					<aligny>center</aligny>
					<font>font13_title</font>
					<textcolor>white</textcolor>
					<label>$INFO[ListItem.Year] [B]•[/B] </label>
					<visible>!IsEmpty(ListItem.Year) + ListItem.Type(movie)</visible>
				</control>
			
				<!-- Date -->
				<control type="label">
					<width min="20" max="226">auto</width>
					<height>30</height>
					<align>left</align>
					<aligny>center</aligny>
					<font>font13_title</font>
					<textcolor>white</textcolor>
					<label>$INFO[ListItem.Date] [B]•[/B] </label>
					<visible>!IsEmpty(Container(11000).ListItem.Date) + ListItem.Type(episode)</visible>
				</control>
						
				<!-- User Rating -->
				<control type="label">
					<width min="20" max="299">auto</width>
					<height>30</height>
					<textcolor>$VAR[Colour_GalleryThemeColourVar]</textcolor>
					<align>left</align>
					<aligny>center</aligny>
					<font>font13_title</font>
					<textcolor>$VAR[Colour_GalleryThemeColourVar]</textcolor>
					<label>$VAR[RatingVar] [COLOR white2][B]•[/B][/COLOR] </label>
					<visible>!IsEmpty(ListItem.Property(hasUserRating))</visible>
				</control>
						
				<include>MyVideoNav_InfoLine</include>
			</control>
			
			<control type="label">
                <posx>398</posx>
                <posy>860</posy>
                <width>1125</width>
                <height>30</height>
                <align>left</align>
                <font>font13_title</font>
                <textcolor>white</textcolor>
                <label>Episodes: $INFO[ListItem.episode] ($INFO[ListItem.Property(UnWatchedEpisodes)] Unwatched)</label>
                <visible>Container.Content(tvshows)</visible>
            </control>
            <control type="label">
                <posx>398</posx>
                <posy>892</posy>
                <width>1125</width>
                <height>30</height>
                <align>left</align>
                <font>font13_title</font>
                <textcolor>white</textcolor>
                <label>$INFO[ListItem.Genre]</label>
            </control>
            <control type="label">
                <posx>398</posx>
                <posy>860</posy>
                <width>1125</width>
                <height>30</height>
                <align>left</align>
                <font>font13_title</font>
                <textcolor>white</textcolor>
                <label>$INFO[ListItem.Property(Artist_Genre)]</label>
                <visible>Container.Content(artists)</visible>
            </control>
        </control>
        <!--strip top-->
        <control type="group">
            <visible>Control.IsVisible(504)</visible>
            <!--container-->
            <control type="fixedlist" id="504">
                <viewtype label="Gallery">info</viewtype>
                <posx>-772</posx>
                <posy>150</posy>
                <width>2850</width>
                <height>1200</height>
                <onleft>504</onleft>
                <onright>504</onright>
                <onup>SetProperty(MediaMenu,True,home)</onup>
                <onup>SetFocus(9050,0)</onup>
                <ondown>noop</ondown>
                <preloaditems>2</preloaditems>
                <focusposition>1</focusposition>
                <orientation>horizontal</orientation>
                <visible>[Container.Content(movies) | Container.Content(tvshows) | Window.IsActive(10002) | Container.Content(artists) | Container.PlexContent(homemovies)] + ![Container.Content(addons) | Container.Content(empty)]</visible>
                <itemlayout width="1125" height="663">
                    <control type="group">
                        <posx>45</posx>
                        <posy>15</posy>
                        <control type="image">
                            <width>1125</width>
                            <height>633</height>
                            <texture>background.png</texture>
                            <colordiffuse>background</colordiffuse>
                        </control>
                        
                        <!-- Fanart -->
                        <control type="image">
                            <visible>!Window.IsActive(pictures)</visible>
                            <width>1125</width>
                            <height>633</height>
                            <texture fallback="special://skin/backgrounds/movies.jpg">$INFO[ListItem.Art(fanart)]</texture>
                            <aspectratio align="center" aligny="center">scale</aspectratio>
                            <colordiffuse>BAffffff</colordiffuse>
                        </control>
                        
                        <!-- Photo Thumb -->
                        <control type="image">
                            <visible>Window.IsActive(pictures) + [!System.GetBool(myplex.disablepicturetranscode) | ListItem.Type(photoAlbum)]</visible>
                            <width>1125</width>
                            <height>633</height>
                            <texture>$INFO[ListItem.Art(bigThumb)]</texture>
                            <aspectratio align="center" aligny="center">scale</aspectratio>
                            <colordiffuse>BAffffff</colordiffuse>
							<aspectratio>scale</aspectratio>
                        </control>
                        <control type="image">
                            <visible>Window.IsActive(pictures) + System.GetBool(myplex.disablepicturetranscode)</visible>
                            <width>1125</width>
                            <height>633</height>
                            <texture>$INFO[ListItem.PicturePath]</texture>
                            <aspectratio align="center" aligny="center">scale</aspectratio>
                            <colordiffuse>BAffffff</colordiffuse>
							<aspectratio>scale</aspectratio>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout width="1125" height="633">
					<control type="group">
                    <animation type="Focus" reversible="false">
                        <effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" />
                        <effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
                    </animation>
                    
                        <posx>45</posx>
                        <posy>15</posy>
                        <control type="image">
                            <width>1125</width>
                            <height>633</height>
                            <texture>background.png</texture>
                            <colordiffuse>background</colordiffuse>
                        </control>
                        <control type="image">
                            <visible>ListItem.Type(photoAlbum)</visible>
                            <width>1125</width>
                            <height>633</height>
                            <texture>background.png</texture>
                            <bordersize>8</bordersize>
                        </control>
                        <control type="image">
                            <visible>!Window.IsActive(pictures)</visible>
                            <width>1125</width>
                            <height>633</height>
                            <texture fallback="special://skin/backgrounds/movies.jpg">$INFO[ListItem.Art(fanart)]</texture>
                            <aspectratio align="center" aligny="center">scale</aspectratio>
                            <bordersize>8</bordersize>
                        </control>
						<control type="image">
                            <width>1125</width>
                            <height>633</height>
                            <texture>empty.png</texture>
                            <colordiffuse>$VAR[Colour_GalleryHighlightColourVar]</colordiffuse>
                            <bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
                            <bordersize>8</bordersize>
                        </control>
						
						<!-- Ribbon Watched Status Overlay -->
                        <control type="image">
                            <visible>![Window.IsActive(pictures) | Container.Content(artists)] + !Skin.HasSetting(Enable.Circles)</visible>
                            <posx>1048</posx>
                            <posy>8</posy>
                            <width>80</width>
                            <height>80</height>
                            <texture>$VAR[OverlayVar]</texture>
                            <aspectratio align="center" aligny="top">keep</aspectratio>
                        </control>
						
						<!-- Watched Status Upper Circle -->
						<control type="image">
							<posx>1070</posx>
							<posy>15</posy>
							<width>36</width>
							<height>36</height>
							<aspectratio>keep</aspectratio>
							<texture>$VAR[OverlayVar]</texture>
							<colordiffuse>$VAR[Colour_GalleryWatchedStatusColourVar]</colordiffuse>
							<visible>Skin.HasSetting(Enable.Circles) + !Skin.HasSetting(Enable.LowerCircles)</visible>
						</control>
					
						<!-- Watched Status Lower Circle -->
						<control type="image">
							<posx>1070</posx>
							<posy>575</posy>
							<width>36</width>
							<height>36</height>
							<aspectratio>keep</aspectratio>
							<texture>$VAR[OverlayVar]</texture>
							<colordiffuse>$VAR[Colour_GalleryWatchedStatusColourVar]</colordiffuse>
							<visible>Skin.HasSetting(Enable.Circles) + Skin.HasSetting(Enable.LowerCircles)</visible>
						</control>
						
						<!-- Photo Thumb -->
                        <control type="image">
                            <visible>Window.IsActive(pictures) + [!System.GetBool(myplex.disablepicturetranscode) | ListItem.Type(photoAlbum)]</visible>
                            <width>1125</width>
                            <height>633</height>
                            <texture>$INFO[ListItem.Art(bigThumb)]</texture>
                            <bordersize>8</bordersize>
							<aspectratio>scale</aspectratio>
                        </control>
                        <control type="image">
                            <visible>Window.IsActive(pictures) + System.GetBool(myplex.disablepicturetranscode)</visible>
                            <width>1125</width>
                            <height>633</height>
                            <texture>$INFO[ListItem.PicturePath]</texture>
                            <bordersize>8</bordersize>
							<aspectratio>scale</aspectratio>
                        </control>
						<control type="image">
                            <visible>Window.IsActive(pictures)</visible>
                            <width>1125</width>
                            <height>633</height>
                            <texture>empty.png</texture>
                            <bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
                            <bordersize>8</bordersize>
							<aspectratio>scale</aspectratio>
							<colordiffuse>$VAR[Colour_GalleryHighlightColourVar]</colordiffuse>
                        </control>
                    </control>
                </focusedlayout>
            </control>
			
			<control type="button">
				<visible>system.getbool(input.enablemouse)</visible>
				<posx>0</posx>
				<posy>0</posy>
				<width>398</width>
				<height>1080</height>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
			</control>
			<control type="button">
				<visible>system.getbool(input.enablemouse)</visible>
				<posx>1522</posx>
				<posy>0</posy>
				<width>398</width>
				<height>1080</height>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
			</control>
			
        </control>
       
	   
    </include>
</includes>
