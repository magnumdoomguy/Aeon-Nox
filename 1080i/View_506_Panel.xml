<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <!--PORTRAIT-->
    <include name="View_506_Panel">
        <include>ViewAnimation</include>
        <control type="list" id="506">
            <viewtype label="Panel">wrap</viewtype>
            <posx>45</posx>
            <posy>335</posy>
            <width>1908</width>
            <height>840</height>
            <onup>SetProperty(MediaMenu,True,home)</onup>
            <onup>SetFocus(9050,0)</onup>
            <ondown>noop</ondown>
            <onleft>506</onleft>
            <onright>506</onright>
            <focusposition>1</focusposition>
            <preloaditems>2</preloaditems>
            <pagecontrol>60</pagecontrol>
            <orientation>horizontal</orientation>
            <visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)</visible>
            <itemlayout width="600" height="843">
                
				<!-- Title -->
				<control type="label">
                    <posy>327</posy>
                    <posx>15</posx>
                    <width>465</width>
                    <height>30</height>
                    <label>[B]$INFO[ListItem.Label][/B]</label>
                    <font>font16_title</font>
                    <textcolor>grey</textcolor>
					<visible>!Container.Content(episodes)</visible>
                </control>
				
				<!-- Episode Title -->
				<control type="label">
                    <posy>327</posy>
                    <posx>15</posx>
                    <width>465</width>
                    <height>30</height>
                    <label>[B]$INFO[ListItem.Episode]. $INFO[ListItem.Label][/B]</label>
                    <font>font16_title</font>
                    <textcolor>grey</textcolor>
					<visible>Container.Content(episodes)</visible>
                </control>
				
                <control type="image">
                    <posx>495</posx>
                    <posy>328</posy>
                    <width>42</width>
                    <height>28</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.Property(mediaTag-videoResolution),overlays/list/,.png]</texture>
                    <colordiffuse>grey</colordiffuse>
                </control>
                <control type="textbox">
                    <posy>370</posy>
                    <posx>15</posx>
                    <width>525</width>
                    <align>justify</align>
                    <height>350</height>
                    <label>$VAR[PlotVar]</label>
                    <font>font14_textbox</font>
                    <textcolor>grey</textcolor>
					<visible>!Skin.HasSetting(General.SmallPlotText)</visible>
                </control>
				<control type="textbox">
                    <posy>370</posy>
                    <posx>15</posx>
                    <width>525</width>
                    <align>justify</align>
                    <height>350</height>
                    <label>$VAR[PlotVar]</label>
                    <font>font14_textbox_panel</font>
                    <textcolor>grey</textcolor>
					<visible>Skin.HasSetting(General.SmallPlotText)</visible>
                </control>
                <include>viewPanelTextbox-ContainerCommons</include>
            </itemlayout>
            <focusedlayout width="600" height="843">
                <control type="image">
                    <width>555</width>
                    <height>730</height>
                    <texture>listselect_fo.png</texture>
					<colordiffuse>$VAR[Colour_PanelHighlightColourVar]</colordiffuse>
                </control>
				
				<!-- Title -->
                <control type="label">
                    <posy>327</posy>
                    <posx>15</posx>
                    <width>465</width>
                    <height>30</height>
                    <label>[B]$INFO[ListItem.Label][/B]</label>
                    <font>font16_title</font>
                    <textcolor>white2</textcolor>
					<visible>!Container.Content(episodes)</visible>
                </control>
				
				<!-- Episode Title -->
                <control type="label">
                    <posy>327</posy>
                    <posx>15</posx>
                    <width>465</width>
                    <height>30</height>
                    <label>[B]$INFO[ListItem.Episode]. $INFO[ListItem.Label][/B]</label>
                    <font>font16_title</font>
                    <textcolor>white2</textcolor>
					<visible>Container.Content(episodes)</visible>
                </control>
				
                <control type="image">
                    <posx>495</posx>
                    <posy>328</posy>
                    <width>42</width>
                    <height>28</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[ListItem.Property(mediaTag-videoResolution),overlays/list/,.png]</texture>
                    <colordiffuse>white2</colordiffuse>
                </control>
                <control type="textbox">
                    <posy>370</posy>
                    <posx>15</posx>
                    <width>525</width>
                    <align>justify</align>
                    <height>350</height>
                    <label>$VAR[PlotVar]</label>
                    <font>font14_textbox</font>
                    <autoscroll time="3000" delay="6000" repeat="5000">Skin.HasSetting(Enable.AutoScroll) + !Control.HasFocus(61)</autoscroll>
                    <textcolor>white2</textcolor>
					<visible>!Skin.HasSetting(General.SmallPlotText)</visible>
                </control>
				<control type="textbox">
                    <posy>370</posy>
                    <posx>15</posx>
                    <width>525</width>
                    <align>justify</align>
                    <height>350</height>
                    <label>$VAR[PlotVar]</label>
                    <font>font14_textbox_panel</font>
                    <autoscroll time="3000" delay="6000" repeat="5000">Skin.HasSetting(Enable.AutoScroll) + !Control.HasFocus(61)</autoscroll>
                    <textcolor>white2</textcolor>
					<visible>Skin.HasSetting(General.SmallPlotText)</visible>
                </control>
                <include>viewPanelTextbox-ContainerCommons</include>
            </focusedlayout>
        </control>
        <control type="scrollbar" id="60">
            <visible>Control.IsVisible(506)</visible>
            <posx>0</posx>
            <posy>1066</posy>
            <width>1920</width>
            <height>14</height>
            <onup>506</onup>
            <ondown>506</ondown>
            <orientation>horizontal</orientation>
            <texturesliderbackground border="1">-</texturesliderbackground>
            <texturesliderbar border="6,0,6,0">scrollbar/texturesliderbar_hor.png</texturesliderbar>
            <texturesliderbarfocus border="6,0,6,0">scrollbar/texturesliderbarfocus_hor.png</texturesliderbarfocus>
            <textureslidernib>-</textureslidernib>
            <textureslidernibfocus>-</textureslidernibfocus>
            <animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
        </control>
    </include>
    <include name="viewPanelTextbox-ContainerCommons">
        <visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)</visible>
        <control type="group">
            <control type="group">
                <posx>15</posx>
                <posy>15</posy>
                <control type="image">
                    <visible>Container.Content(movies) | Container.Content(tvshows)</visible>
                    <width>525</width>
                    <height>296</height>
                    <texture fallback="special://skin/backgrounds/movies.jpg">$INFO[ListItem.Art(fanart)]</texture>
                    <aspectratio align="center" aligny="center">scale</aspectratio>
                </control>
                <control type="image">
                    <visible>Container.Content(episodes)</visible>
                    <width>525</width>
                    <height>296</height>
                    <texture fallback="special://skin/backgrounds/movies.jpg">$VAR[EpisodeThumbnailVar]</texture>
                    <aspectratio align="center" aligny="center">scale</aspectratio>
                </control>
                <control type="image">
                    <visible>!Skin.HasTheme(WhiteFlat)</visible>
                    <posx>456</posx>
                    <posy>0</posy>
                    <width>80</width>
                    <height>80</height>
                    <texture>$VAR[OverlayVar]</texture>
                    <aspectratio align="center" aligny="top">keep</aspectratio>
					<visible>!Skin.HasSetting(Enable.Circles)</visible>
                </control>
                <!-- Duped WhiteFlat -->
                <control type="image">
                    <visible>Skin.HasTheme(WhiteFlat)</visible>
                    <posx>0</posx>
                    <posy>296</posy>
                    <width>525</width>
                    <height>6</height>
                    <texture colordiffuse="$VAR[Colour_ListWatchedStatusColourVar]">$VAR[OverlayVar]</texture>
                    <aspectratio align="center" aligny="top">keep</aspectratio>
                    <visible>!Skin.HasSetting(Enable.Circles)</visible>
                    <animation effect="fade" start="0" end="100" time="10000" condition="true">Conditional</animation>
                </control>
                <!-- End -->
				
				<!-- Watched Status Upper Circle -->
				<control type="image">
					<posx>478</posx>
					<posy>15</posy>
					<width>36</width>
					<height>36</height>
					<aspectratio>keep</aspectratio>
					<texture>$VAR[OverlayVar]</texture>
					<colordiffuse>$VAR[Colour_PanelWatchedStatusColourVar]</colordiffuse>
					<visible>Skin.HasSetting(Enable.Circles) + !Skin.HasSetting(Enable.LowerCircles)</visible>
				</control>            
					
				<!-- Watched Status Lower Circle -->
				<control type="image">
					<posx>478</posx>
					<posy>245</posy>
					<width>36</width>
					<height>36</height>
					<aspectratio>keep</aspectratio>
					<texture>$VAR[OverlayVar]</texture>
					<colordiffuse>$VAR[Colour_PanelWatchedStatusColourVar]</colordiffuse>
					<visible>Skin.HasSetting(Enable.Circles) + Skin.HasSetting(Enable.LowerCircles)</visible>
				</control>
            </control>
        </control>
    </include>
</includes>
